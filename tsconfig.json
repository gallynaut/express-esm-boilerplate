{
  "include": ["./src/**/*.ts"],
  "exclude": ["jest.config.ts", "node_modules"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src"]
    }
  }
}
